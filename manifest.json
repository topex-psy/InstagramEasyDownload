{
  "manifest_version": 2,
  "name": "Instagram Easy Download",
  "version": "0.0.1",
  "description": "1-Click to download all instagram photos.",
  "author": "Taufik Nur Rahmanda",
  "permissions": [
    "activeTab",
    "https://*.instagram.com/*"
  ],
  "browser_action": {
    "default_title": "Open a Instagram post to download its photos",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}