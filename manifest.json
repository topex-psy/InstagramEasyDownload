{
  "manifest_version": 3,
  "name": "Instagram Easy Download",
  "version": "0.0.2",
  "description": "1-Click to download all instagram photos.",
  "author": "Taufik Nur Rahmanda",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.instagram.com/*"
  ],
  "action": {
    "default_title": "Open a Instagram post to download its photos",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*"],
      "js": ["foreground.js"]
    }
  ]
}